{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "baseUrl" : "./src",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule" : true,
    "esModuleInterop" : true,
  }
}
