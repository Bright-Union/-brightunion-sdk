{
  "compilerOptions": {
    "baseUrl" : "./src",
    "paths": {
      "@/*": [ "*" ]
    },
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule" : true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true
  }
}
